doctype

html(lang="ru")
  
  -var active = 'Отклики и приглашения 1' //активный пункт меню, список в header.jade
  -var pageTitle = 'Отклики и приглашения 1' + ' - redpuzzle.ru' //title страницы для генерации верстки  

  include ./_include/_head

  body
    
    // Preloader
    include ./_include/_preloader
    
    include ./_include/_header
    
    // Content
    .content.content--all
      .container
        
        // Breadcrumbs
        ul.breadcrumbs
          li
            a(href="#!") RedPuzzle.ru
          li
            span Название страницы
        
        .content__head.content__head--mobile
          button#mobileColBtn(type="button").content__head-button
            i.ion-gear-a
          h1 Отклики и приглашения
        
        // Mobile column
        #mobileCol.mobile__col
          .mobile__col-background
          .mobile__col-wrapper
            #mobileColWrapperBody.mobile__col-wrapper__body
              button#mobileColButton(type="button").mobile__col-button
                span
                  i.ion-gear-a
              #mobileColWrapperBody-div
                
        .row
          .col-md-3.hidden-sm.hidden-xs
            #mobileColContent.mobile__col-content
              div
                include ./_include/_profile-left
                  
          .col-md-9
            
            // Response
            .response
              
              // Response table 1
              .response__table1
                table
                  thead
                    tr
                      th Статус
                      th Вакансия
                      th Дата
                  tbody
                    tr.tr
                      td
                        strong Рассмотрено
                        span.date.visible-xxs 31 января 2017
                      td
                        strong
                          a(href="#!") E-mail менеджер
                        small
                          a(href="#!") Фокстрот. Техника для дома, Москва
                      td(nowrap) 31 января 2017
                    tr
                      td
                        strong.name.color.color--blue Представитель компании
                      td(colspan="2")
