              // Response form
              .response__form
                form(action="#!")
                  .response__form-wrapper.table
                    div.table-cell
                      .form-group.form-group--normal.block-focus
                        label.hidden Введите сообщение
                        textarea(name="message" placeholder="Введите сообщение" rows="5").form-control.input-focus
                    div.table-cell
                      button(type="submit").btn.btn--middle
                        span отправить сообщение
              
              // Response button
              .response__button.table
                div.table-cell
                  a(href="#!").btn.btn--middle.btn--border
                    span отказать
                div.table-cell &nbsp;
